
public class Analyseur {

	String expression;
	int racine_courante;
	
	public Analyseur(String e) {
		expression = e;
	}
	
	public Arbre analyse(String exp)
	{
		int racine = rechercheRacine(exp);
		racine_courante = racine;
		String expG = "", ExpD = "";
		expG = exp.substring(1, racine);
		expG = exp.substring(1, );

		Arbre A = new Arbre(new Noeud(new Noeud(),new Noeud(),expression.charAt(racine)));
		return A;
	}
	
	
	private int rechercheRacine(String ch)
	{
		char c_cour;
		int p_compte=0;
		int r_ind = 0;
		int r_prio = ch.length();
		for(int i=0;i<ch.length();i++)
		{
			c_cour = ch.charAt(i);
			if(c_cour == '('){
				p_compte++;
			}else if(c_cour == ')'){
				p_compte--;
			}else if(estOperateur(c_cour) && r_prio > p_compte){
				r_prio = p_compte;
				r_ind = i;
			}
		}
		return r_ind;
	}
	
	private boolean estOperateur(char c)
	{
		if(c == '+' || c == '-' || c == '*' || c == '/')
		{
			return true;
		}else{return false;}
	}

}
