
public class Arbre {

	private Noeud racine;
	private int niveau;
	public Arbre(Noeud r) {
		racine = r;
		niveau = 0;
	}
	
	public Noeud getRacine(){
		return racine;
	}
	
	private boolean estOperateur(char c)
	{
		if(c == '+' || c == '-' || c == '*' || c == '/')
		{
			return true;
		}else{return false;}
	}
	
	public void afficherArbre(Noeud rac){
		Noeud petitFils = rac.gauche().gauche();
		if((petitFils.getEstNul() != true) && (estOperateur(petitFils.getElt()))){
			afficherArbre(rac.gauche());
			afficherArbre(rac.droit());
		}
		else{
			System.out.println(rac.gauche().getElt());
			System.out.println(rac.getElt());
		}
	}
}
