import java.awt.Color;
import java.awt.Graphics;
import java.util.ArrayList;


public class Region {

	private ArrayList<TriangleSurface> triangles;
	private Carre carre;
	
	public Region(ArrayList<TriangleSurface>triangles,Point pos,double taille) {
		Point A = pos;
		Point B = new Point(pos.x,pos.y+taille);
		Point C = new Point(pos.x+taille,pos.y+taille);
		Point D = new Point(pos.x+taille,pos.y);
		setCarre(new Carre(A,B,C,D));
		//carre.affPoly();
		this.setTriangles(triangles);
	}
	
	public Region(Point pos,double taille)
	{
		Point A = pos;
		Point B = new Point(pos.x,pos.y+taille);
		Point C = new Point(pos.x+taille,pos.y+taille);
		Point D = new Point(pos.x+taille,pos.y);
		setCarre(new Carre(A,B,C,D));
		//carre.affPoly();
	}

	static boolean TestRegionIntersecteTriangle(Region r,Triangle t)
	{
		if(r.getCarre().triangleDansCarre(t))
		{
			return true;
		}else {
			return false;
		}
	}
	

	public TriangleSurface RecherchePointTriangle(Point p)
	{
		for(TriangleSurface tri : this.triangles)
		{
			if(Triangle.TestTriangleContientPoint(tri, p))
			{
				return tri;
			}
		}
		return this.triangles.get(0); // Retour par défaut
	}
	
	public ArrayList<TriangleSurface> getTriangles() {
		return triangles;
	}

	public void setTriangles(ArrayList<TriangleSurface> triangles) {
		this.triangles = triangles;
	}

	public Carre getCarre() {
		return carre;
	}

	public void setCarre(Carre carre) {
		this.carre = carre;
	}

}
