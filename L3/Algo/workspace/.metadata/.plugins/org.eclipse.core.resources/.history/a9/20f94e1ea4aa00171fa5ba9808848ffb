
public class Arbre {

	private Noeud racine;
	private int niveau;
	public Arbre(Noeud r) {
		racine = r;
		niveau = 0;
	}
	
	public Noeud getRacine(){
		return racine;
	}
	
	public void afficherArbre(Noeud rac){
		System.out.println(rac.getElt());
		if(rac.gauche().getEstNul() != true){
			System.out.println(rac.gauche().getElt());
			System.out.println(rac.getElt());
			System.out.println(rac.droit().getElt());
			afficherArbre(rac.gauche());
			afficherArbre(rac.droit());
		}
	}
}
