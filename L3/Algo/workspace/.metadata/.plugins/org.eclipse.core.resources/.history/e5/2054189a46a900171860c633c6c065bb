
public class Tri {
	
	public Tri(){}
	
	public void triFusion(int[] tab,int d, int f){
		int milieu = (d+f)/2;
		if(d != f){
			triFusion(tab, d, milieu);
			triFusion(tab, milieu+1, f);
			fusion(tab , d , milieu , f);
		}
			
	}
	
	private void fusion(int[] tab ,int d ,int d2, int f){
		int[] tab1= new int[d2-d+1];
		for(int i=d ;i<d2 ;i++){
			tab1[i-d] = tab[i];
		}
		int a = d;
		int b = d2+1;
		for(int i=d ;i<=f ;i++){
			if(a == d+1){}
			else if(b == f+1){
				tab[i] = tab[a-d];
				a++;
			}
			else if(tab1[a-d] < tab[b]){
				tab[i] = tab1[a-d];
				a++;
			}
			else{
				tab[i] = tab1[b];
				a++;
			}	
		}
	}
	
	public void afficherTab(int[] tab){
		
	}
}
