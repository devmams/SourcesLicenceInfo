
public class Arbre {

	private Noeud racine;
	private int niveau;
	public Arbre(Noeud r) {
		racine = r;
		niveau = 0;
	}
	
	public Noeud getRacine(){
		return racine;
	}
	
	public void afficherArbre(Noeud rac){
		Noeud petitFils = rac.gauche().gauche();
		if(rac.gauche().gauche().getEstNul() != true && rac){
			afficherArbre(rac.gauche().gauche());
			afficherArbre(rac.droit().droit());
		}
		else{
			System.out.println(rac.gauche().getElt());
			System.out.println(rac.getElt());
		}
	}
}
