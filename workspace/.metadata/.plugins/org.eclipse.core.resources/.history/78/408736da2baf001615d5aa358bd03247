	public boolean occupee(int x, int y){
		boolean occupee = false;
		int tmp = Constantes.Largeur*y + x;
		Empire e = new Empire();
		for(int i=0 ; i<e.getCaseOccupees().size() ;i++){
			if(tmp == e.getCaseOccupees().get(i)){
				occupee = true;
				break;
			}
		}
		System.out.println(occupee);
	}
	
