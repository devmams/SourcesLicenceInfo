import java.util.Scanner;

imporjava.util.Scanner;


public class MainPrincipal {
	public static void main(String[] args) {
		
		int depl;
		boolean res = true;
		Scanner sc = new Scanner(System.in);
		Fabrique f = new Fabrique();
		Piece p = f.creerCarre();
		Plateau plat = new Plateau();
		plat.jouer(p);
		
		while(true){
			while(res){
					int dep = sc.nextInt();
					if(dep == 1){
						p = p.versLaGauche();
						plat.retirer(p);
						if(!plat.accepter(p)){
							p = p.getAncienne();						}
					}
					else if(dep == 2){
						p = p.versLaDroite();
						if(!plat.accepter(p)){
							p = p.getAncienne();
						}
					}
					else if(dep == 0){
					 p = p.versLeBas();
					}
					
					plat.jouer(p);
					plat.retirer(p);
					if(!plat.accepter(p.versLeBas())){
						plat.ajouter(p);
						p = f.creerCarre();
						plat.jouer(p);
						plat.retirer(p);
						if(!plat.accepter(p.versLeBas())){
							res = false;
						}
					}
			}
			System.out.println("jeu termin√© !");
	}
	}
		
}
