	private void deplace(){
		switch(typeDeplacement){
		case '+' : 
			lineaire();
			
		break;	
		}
	}
	
	public void deplacement(){
			if(verifCarburant()){
				getPropulsion().setCarburant();
				deplace();
			}
			else{
				//autoDestruction();
			}
	}
	
}
